
@model IEnumerable<OnlineHouseRentManagementSystem.Models.HouseDetailcs>

@{
    ViewBag.Title = "HouseDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<center>
    <h2>HouseDetails</h2>

</center>

<br/>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bedrooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HouseRent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ContactNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Bedrooms)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HouseRent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        <div class="container">
            <div class="row">
                <div class="col-xs-2">
                    <a href="@Url.Action("Edit", "AdminManage",new { id=item.IdUs })" class="btn btn-outline-success" style=margin:5px; role="button" aria-pressed="true">Edit</a>
                    <a href="@Url.Action("Delete", "AdminManage",new { id=item.IdUs })" class="btn btn-outline-warning" style=margin:5px; role="button" aria-pressed="true">Delete</a>
                    
                </div>

            </div>
        </div>
    </td>
</tr>
    }

</table>

