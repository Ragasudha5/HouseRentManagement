@model IEnumerable<OnlineHouseRentManagementSystem.Models.HouseDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bedrooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HouseRent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bedrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HouseRent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <div class="container">
                <div class="row">
                    <div class="col-xs-2">
                        <a href='@Url.Action("Edit", "HouseDetail",new { id=item.IdUs })' />
                        <button type="button" id="slide_start_button" value="Edit" class="btn btn-outline-success">Edit</button>
                    </div>
                    <div class="col-xs-2">
                        <a href='@Url.Action("Delete", "HouseDetail",new { id=item.IdUs })' />
                        <button type="button" id="slide_stop_button" value="Delete" class="btn btn-outline-warning">Delete</button>
                    </div>
                </div>
            </div>
        </td>
    </tr>
}

</table>
